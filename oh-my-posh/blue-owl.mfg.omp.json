{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Root}} ‚ö° {{end}}{{.Folder | replace \"~\" \"üèö\" }} @ {{.HostName}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "‚ö° ",
          "foreground": "#FFEB3B",
          "background": "#a313a8",
          "type": "root"
        },
        {
          "style": "plain",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "foreground": "#ffffff",
          "background": "transparent",
          "type": "os"
        },
        {
          "properties": {
            "folder_icon": "...",
            "folder_separator_icon": "<transparent> \ue0bd </>",
            "home_icon": "\ueb06",
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "style": "diamond",
          "leading_diamond": "<transparent,#01579B>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .Path }} ",
          "foreground": "#ffffff",
          "background": "#01579B",
          "type": "path"
        },
        {
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "style": "powerline",
          "template": " {{ .HEAD }}{{ if .Staging.Changed }}<#FF6F00> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "background": "#00C853",
          "type": "git",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ]
        },
        {
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "leading_diamond": "<transparent,#49404f>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .FormattedMs }}s ",
          "foreground": "#ffffff",
          "background": "#49404f",
          "type": "executiontime"
        },
        {
          "style": "powerline",
          "template": "<transparent> \uf12a</> {{ reason .Code }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#910000",
          "type": "status"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "context_aliases": {
              "arn:aws:eks:eu-west-1:1234567890:cluster/posh": "posh"
            }
          },
          "style": "powerline",
          "template": " \u2388 {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} ",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "background": "#3371e3",
          "type": "kubectl"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "‚ùØ ",
          "foreground": "#ffffff",
          "background": "",
          "type": "status",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "auto_upgrade": true
}
